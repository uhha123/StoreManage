<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="@dimen/fab_margin"
    android:layout_marginRight="@dimen/fab_margin"
    app:cardCornerRadius="5dp"
    android:id="@+id/crd_dash"
    app:cardBackgroundColor="@color/dash_card_violet">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_dash_thumnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:layout_marginTop="@dimen/fab_margin"
            android:src="@drawable/ic_movie"/>
        <RelativeLayout
            android:layout_marginTop="@dimen/fab_margin"
            android:layout_below="@+id/iv_dash_thumnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/tv_dash_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quản lý"
                android:gravity="center"
                android:textColor="@color/dash_text_color"
                android:textSize="@dimen/text_normal_size"/>
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>